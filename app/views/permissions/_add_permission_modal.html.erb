<div class="modal fade" tabindex="-1" role="dialog" id="addPermissionModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4>Add Permission</h4>
      </div>
      <div class="modal-body">
        <ul class="list-group">
          <% @folders.each do |folder| %>
            <% unless user.can_access?(folder) %>
              <%= form_for(@permission, url: user_permissions_path(user), remote: true ) do |f| %>
                <%= hidden_field_tag 'user_id', user.id %>
                <%= hidden_field_tag 'folder_id', folder.id %>
                <li class="list-group-item" id="folder-<%= folder.id %>">
                  <%= f.submit folder.name, class: "btn btn-default" %>
                </li>
              <% end %>
            <% end %>
          <% end %>
        </ul>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default btn-raised cancel-button" data-dismiss="modal">
          Close
        </button>
      </div>
    </div>
  </div>
</div>