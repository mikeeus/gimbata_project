<h1 class=text-center>Manage Users</h1>
<div class="row">
  <div class="col-md-4 users">
    <h3 class="text-center">Users</h3>
    <ul class="list-group">
      <% @users.each do |user| %>
        <% unless user == current_user %>
          <li class="list-group-item">
          <span class="glyphicon glyphicon-user user-icon"></span> <%= "#{user.first_name} #{user.last_name}" %>
            <%= link_to 'Delete User', delete_user_path(user), method: :delete, data: { confirm: "Are you sure?"}, class: "delete-user-button" %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>


  <!-- List has to be fixed, its not properly nested atm -->
  <div class="col-md-8">
    <div id="permissions">
      <%= render 'permissions/permissions', users: @users %>
    </div>
  </div>
</div>