<%= form_for(@document, url: folder_documents_path, multipart: true) do |f| %>

  <% if true %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :file %>
      <div class="dropzone">
        <%= f.file_field :file, class: "form-control" %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit 'Upload Document' %>
    </div>
  <% end %>
<% end %>